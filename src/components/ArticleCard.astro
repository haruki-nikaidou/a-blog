---
interface Props {
    title: string;
	discribe: string;
	href: string;
}

const { href, title, discribe } = Astro.props;
---

<div class="article box">
    <h2>
        <a href={href}>{title}</a>
    </h2>
    <p>
        {discribe}
    </p>
</div>

<style>
    .article.box {
        min-width: 15em;
        max-width: 30em;
        overflow: hidden;
        padding: 1rem;
        box-sizing: border-box;
        min-height: 13em;
        backdrop-filter: blur(10px);
        height: 100%;
    }

    .article h2 {
        margin-bottom: 1em;
    }

    .article a {
        color: #a72e42;
    }
</style>
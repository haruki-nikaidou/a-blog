---
import {Card, Typo, Link} from '@koibumi-design/solidjs'
import {GLOBAL_STYLE} from "../consts";
import {getRelativeLocaleUrl} from "astro:i18n";


interface Props {
  slug: string
  heroImage?: string
  title: string
  pubDate: Date
  lang: string
  description?: string
}

const {slug, heroImage, title, pubDate, description, lang} = Astro.props
---

<Card
    class="post-card"
    variant={GLOBAL_STYLE}
>
  <a
      class='img-container'
      href={getRelativeLocaleUrl(lang, `/blog/${slug}`)}
  >
    {
      heroImage === undefined ?
          (
              <Typo variant="h4" emphasis>
                {title}
              </Typo>
          )
          : <img src={heroImage} alt={title}/>
    }
  </a>
  <Typo variant="h4">
    <Link href={getRelativeLocaleUrl(lang, `/blog/${slug}`)}>
      {title}
    </Link>
  </Typo>
  <Typo>
    {description}
  </Typo>
  <Typo class="date">
    {pubDate.toLocaleDateString()}
  </Typo>
</Card>

<style lang="scss">
  @import "../styles/colors.scss";

  .post-card {
    padding-bottom: 2rem;

    & > h4 {
      margin-top: 1rem;
    }
  }

  .date {
    text-align: right;
    position: absolute;
    bottom: 1rem;
    right: 1rem;
  }

  .img-container {
    aspect-ratio: 16/9;
    overflow: clip;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 0.75rem;
    cursor: pointer;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    & > * {
      transition: transform 0.3s ease-in-out;
    }

    & > *:hover {
      transform: scale(1.2);
    }

    &:has(h4) {
      background-color: rgba($color-slate-100, 0.5);
    }

    h4 {
      wrap-option: wrap;
    }
  }
</style>
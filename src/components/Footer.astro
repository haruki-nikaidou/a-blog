---
import {COPYRIGHT_NAME, GLOBAL_STYLE} from "../consts";
import {Card, Link} from '@koibumi-design/solidjs'
const today = new Date();
---

<footer>
    <Card
            variant={GLOBAL_STYLE}
            id="footer-container"
    >
        &copy; {today.getFullYear()}&nbsp;{COPYRIGHT_NAME} |
        <Link target="_blank" href="http://creativecommons.org/licenses/by-nc/4.0/?ref=chooser-v1">CC Attribution-NonCommercial 4.0</Link><br>
        Powered by <Link href="https://github.com/koibumi-design/astro-blog">Koibumi Design</Link>
    </Card>
</footer>

<style>
    #footer-container {
        border-bottom-left-radius: 0;
        border-bottom-right-radius: 0;
    }

    footer {
        text-align: center;
    }
</style>